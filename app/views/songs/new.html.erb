<h1>New Song Form</h1>
<%= form_for @song do |f|%>
  <% if @song.errors.any? %>
     <ul>
       <% @song.errors.full_messages.each do |message|%>
        <li><%= message %></li>
       <% end %>
     </ul>
  <% end %>

  <p>Title: <%= f.text_field :title %></p>
  <p>Released: <%= f.check_box :released %>
  <p>Release Year: <%= f.number_field :release_year %></p>
  <p>Genre: <%= f.text_field :genre %></p>
  <p>Artist Name: <%= f.text_field :artist_name %></p>

  <%= f.submit :'Update Song'%>
<% end %>
